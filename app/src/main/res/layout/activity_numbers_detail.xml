<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.learnksl.learnksl.ui.DetailActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Numbers"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:fillViewport="false"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewOne"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp"
                android:src="@drawable/one" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:text="ONE"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewB"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginLeft="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/two" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="50dp"
                android:text="TWO"
                android:textSize="28sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewThree"
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp"
                android:src="@drawable/three" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:text="THREE"
                android:textSize="28sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewFour"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp"
                android:src="@drawable/four" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:text="FOUR"
                android:textSize="28sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewfive"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp"
                android:src="@drawable/five" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:text="FIVE"
                android:textSize="28sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewSix"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp"
                android:src="@drawable/six" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:text="SIX"
                android:textSize="28sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewSeven"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp"
                android:src="@drawable/seven" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:text="SEVEN"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewEight"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp"
                android:src="@drawable/eight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:text="EIGHT"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewNine"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp"
                android:src="@drawable/nine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:text="NINE"
                android:textSize="28sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageViewTen"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ten" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:text="TEN"
                android:textSize="28sp"
                android:textStyle="bold" />



        </LinearLayout>


    </ScrollView>

</RelativeLayout>