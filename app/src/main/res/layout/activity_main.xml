<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E2cfea">

    <!-- A CardView that contains a TextView -->
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/basicsImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/basic" />

        <TextView
            android:id="@+id/basicsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/basicsImageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:background="#99607D8B"
            android:gravity="center"
            android:text="Basics"
            android:textColor="#fff"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/tutorialsImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tut"
            android:layout_below="@+id/basicsImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tutorialsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#99607D8B"
            android:gravity="center"
            android:text="Tutorials"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_alignBottom="@+id/tutorialsImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@+id/communicationImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/com"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/tutorialsImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/communicationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#99607D8B"
            android:gravity="center"
            android:text="Communication"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_alignBottom="@+id/communicationImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@+id/ImageView3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/feedback"
            android:layout_below="@+id/communicationImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp" />

        <TextView
            android:id="@+id/feedbackTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ImageView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:background="#99607D8B"
            android:gravity="center"
            android:text="Feedback"
            android:textColor="#fff"
            android:textSize="30sp" />



    </RelativeLayout>

</ScrollView >
