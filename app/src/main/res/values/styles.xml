<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    <item name="windowActionBar">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/theme_primary_accent</item>
        <item name="android:windowBackground">@color/theme_window_background</item>
    </style>

    <style name="Theme.Main" parent="Base.Theme">

    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarPopUp" parent ="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/theme_window_background</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SizeSpecificCollapsingToolbarLayout">
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="contentScrim">?attr/colorPrimary</item>
    </style>

    <!--Toast Style-->
    <style name="MyToast">
        <item name="android:textColor"></item>
        <item name="android:textStyle"></item> only bold!
        <item name="android:fontFamily"></item> For custom fonts just add the path -> fonts/myfont.ttf
        <item name="android:colorBackground"></item>
        <item name="android:strokeWidth"></item>   API 21+
        <item name="android:strokeColor"></item>   API 21+
        <item name="android:radius"></item>  radius for corners of the toast shape
        <item name="android:alpha"></item>   value between 0-255 where 255 is full solid
        <item name="android:icon">/</item>  drawable id of the icon. R.drawable.xx
    </style>
</resources>